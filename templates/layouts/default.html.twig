{# layouts/default.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Derafu: Form - Declarative Forms, Seamless Rendering{% endblock %}

{% block body %}
    {% block header %}
        <div id="header-container" class="sticky-top"></div>
    {% endblock %}

    {% block main %}
        <div class="container mb-4">
            <div class="row">
                <main class="col-md-9">
                    {% block content %}{% endblock %}
                </main>
                <div class="col-md-3 py-4">
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Package Info</div>
                                <span class="smal text-muted">
                                    <a href="https://github.com/derafu/form" target="_blank" class="link-secondary text-decoration-none">
                                        <i class="fa-brands fa-github"></i>
                                        derafu/form
                                    </a>
                                </span>
                                <div class="my-2">
                                    <img src="https://img.shields.io/github/stars/derafu/form" alt="GitHub Repo stars">
                                    <img src="https://img.shields.io/github/forks/derafu/form" alt="GitHub forks">
                                </div>
                            </div>
                        </li>
                        <a href="{{ base_path }}/" class="list-group-item list-group-item-action {% if request.uri.path == '/' %}active{% endif %}">
                            README
                        </a>
                    </div>
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Docs</div>
                                <span class="smal text-muted">Guides & Examples</span>
                            </div>
                        </li>
                        <a href="{{ base_path }}/examples" class="list-group-item list-group-item-action {% if request.uri.path == '/examples' %}active{% endif %}">
                            Examples
                        </a>
                        <a href="{{ base_path }}/guide_en" class="list-group-item list-group-item-action {% if request.uri.path == '/guide_en' %}active{% endif %} disabled">
                            English Guide
                        </a>
                        <a href="{{ base_path }}/guide_es" class="list-group-item list-group-item-action {% if request.uri.path == '/guide_es' %}active{% endif %} disabled">
                            Guía en Español
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        <div id="footer-container"></div>
        <script src="https://derafu.org/js/derafu.js"></script>
    {% endblock %}
{% endblock %}

{% block javascripts %}
<script type="module" src="{{ base_path }}/js/app.min.js"></script>
{% endblock %}
