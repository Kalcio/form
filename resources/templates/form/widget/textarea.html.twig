{#
    This template renders a textarea widget.

    Parameters:

      - attrs: Prepared HTML attributes for the textarea element.
      - value: Current content of the textarea.
 #}

{# Generate the HTML attributes string. #}
{% set attr_string = '' %}
{% for name, attr_value in attrs %}
    {% if attr_value is same as(true) %}
        {% set attr_string = attr_string ~ ' ' ~ name %}
    {% elseif attr_value is not same as(false) %}
        {% set attr_string = attr_string ~ ' ' ~ name ~ '="' ~ attr_value|e('html_attr') ~ '"' %}
    {% endif %}
{% endfor %}

<textarea{{ attr_string|raw }}>{{ value|default('')|e }}</textarea>
