{#
   This template renders a text widget.
   It assumes that the 'attrs' variable contains all needed HTML attributes.
#}

{# Generate the HTML attributes string. #}
{% set attr_string = '' %}
{% for name, value in attrs %}
    {% if value is same as(true) %}
        {% set attr_string = attr_string ~ ' ' ~ name %}
    {% elseif value is not same as(false) %}
        {% set attr_string = attr_string ~ ' ' ~ name ~ '="' ~ value|e('html_attr') ~ '"' %}
    {% endif %}
{% endfor %}

<input{{ attr_string|raw }}>
